@{
    Layout = null;
}
@model TestMVC.Domain.ViewModels.UserLoginViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/jquery-3.4.1.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <style>
        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            height: 30px;
            background-color: darkgray;
        }

        input[type='checkbox'] {
            width: 21px;
            height: 21px;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark navbar-fixed-top" role="navigation">
        <div>
            <div class="navbar-header">
                <span><a class="navbar-brand">Medicine Manager</a></span>
            </div>
        </div>
    </nav>
        <div class="container body-content">
            <div class="row">
                <div class="offset-md-3 col-md-6" style="text-align: center">
                    <form method="post">
                        <h1 style="margin-top: 30%"><span class="heading">User Login</span></h1>
                        <div class="form-group">
                            <input id="userId" type="text" name="login" placeholder="UserID" style="width: 300px" required autofocus />
                            <p>@ViewBag.Error</p>
                        </div>
                        <div class="form-group">
                            <input id="password" type="password" name="password" placeholder="Password" style="width: 300px" required />
                            <p>@ViewBag.ErrorMessage</p>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-info" type="submit" id="btnLogin">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    
    <footer class="footer" style="text-align:center">
        <p>&copy;2017--@(ViewBag.ActionYear) Medicine Manager</p>
    </footer>
</body>
</html>