@{
    Layout = null;
}
@model TestMVC.Domain.ViewModels.UserLoginViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Css/bootstrap.min3.3.7.css" rel="stylesheet" />
    <script src="~/js/bootstrap.min.js"></script>
    <style>
        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            height: 30px;
            background-color: darkgray;
        }

        input[type='checkbox'] {
            width: 16px;
            height: 16px;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div>
            <div class="navbar-header">
                <span><a class="navbar-brand" style="color:white">Medicine</a></span>
            </div>
        </div>
    </nav>
        <div class="container body-content">
            <div class="row">
                <div class="col-md-offset-3 col-md-6" style="text-align: center">
                    <form method="post">
                        <h1 style="margin-top: 40%"><span class="heading">User Login</span></h1>
                        <div class="form-group">
                            <input value="@ViewBag.LoginUser" id="userId" type="text" name="login" placeholder="UserID" style="width: 300px;height:34px" required autofocus />
                            <p>@ViewBag.Error</p>
                        </div>
                        <div class="form-group">
                            <input value="@ViewBag.LoginPwd" id="password" type="password" name="password" placeholder="Password" style="width: 300px;height:34px" required />
                            <p>@ViewBag.ErrorMessage</p>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="checkbox" /><span style="vertical-align:middle">Remember me</span>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-info" type="submit" id="btnLogin">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    
    <footer class="footer" style="text-align:center">
        <p style="margin-top:5px">&copy;2017--@(ViewBag.ActionYear) Medicine Manager</p>
    </footer>
</body>
</html>