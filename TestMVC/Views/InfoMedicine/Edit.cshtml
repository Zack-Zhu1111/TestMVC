@model TestMVC.Domain.ViewModels.MedicineInfoAndCategoryViewModel
@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";

}
<script src="~/Scripts/DatePicker/WdatePicker.js"></script>
<script src="~/Scripts/DatePicker/calendar.js"></script>
<script src="~/Scripts/DatePicker/config.js"></script>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

@using (Html.BeginForm("Edit", "InfoMedicine", new AjaxOptions { HttpMethod = "post", OnSuccess = "success" }))
{

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row form-group">
            <label class="control-label col-md-2">MedicineNo</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ID, new { @class = "form-control", @style = "width:230px;height:36px", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-md-2">Medicine Name</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.name, new { @class = "form-control", @style = "width:230px;height:36px" })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-md-2">Production Place</label>
            <div class="col-md-10">

                @Html.TextBoxFor(model => model.origin, new { @class = "form-control", @style = "width:230px;height:36px" })
                @Html.ValidationMessageFor(model => model.origin, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-md-2">Production Date</label>
            <div class="col-md-10">
                <div class="input-group" style="width:270px">
                    @Html.TextBoxFor(model => model.PD, htmlAttributes: new { id = "d1", @class = "form-control", @style = "width:230px;height:36px", onclick = "WdatePicker();", autocomplete = "off", @placeholder = "mm/dd/yyyy" })
                    <img id="1" style="cursor: pointer;height: 36px; width: 36px;" onclick="WdatePicker({el:'d1'})" src="~/images/calendar.png">
                </div>
                @Html.ValidationMessageFor(model => model.PD, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-md-2">Expiration Date</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.EXP, new { @class = "form-control", @style = "width:130px;height:36px;float:left", @onkeyup = "this.value=this.value.replace(/\\D/g,'')" })
                @Html.DropDownListFor(model => model.date, ViewData["Date"] as List<SelectListItem>,new { @style = "width:100px;height:36px" })
                @Html.ValidationMessageFor(model => model.EXP, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-md-2">Price</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.price, new { @class = "form-control", @style = "width:230px;height:36px", @onkeyup = "this.value=this.value.replace(/\\D/g,'')" })
                @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-md-2">Category</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.category, ViewData["Category"] as List<SelectListItem>)
            </div>
        </div>
        <div class="row form-group">
            <label class="control-label col-md-2">Usage</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.usage, Model.Usage as List<SelectListItem>)
            </div>
        </div>




        <div class="row form-group">
            <input class="btn btn-default col-md-offset-2" type="submit" value="Save" />
            <a class="btn btn-default" href="@Url.Action("Main", "InfoMedicine")" style="margin-left:5px">Back</a>
        </div>
    </div>
}


